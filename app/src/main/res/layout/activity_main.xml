<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="20dp"
        android:background="#ffae51">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Azienda Agricola Margherita"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/textViewTitolo" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person_outline_black_24dp"
            android:id="@+id/imageButtonUser"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:id="@+id/tool"
        android:background="#f79e38">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonList"
            android:src="@drawable/ic_assignment_black_24dp"
            android:padding="9dp"
            android:background="#00ffffff"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonCiligie"
            android:src="@drawable/ic_card_travel_black_24dp"
            android:padding="9dp"
            android:layout_marginLeft="50dp"
            android:background="#00ffffff"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonContatti"
            android:src="@drawable/ic_pin_drop_black_24dp"
            android:padding="9dp"
            android:layout_marginLeft="50dp"
            android:background="#00ffffff"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonGalleria"
            android:src="@drawable/ic_filter_hdr_black_24dp"
            android:padding="9dp"
            android:layout_marginLeft="50dp"
            android:background="#00ffffff"
            android:layout_weight="1" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        android:layout_below="@+id/tool"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></FrameLayout>


</RelativeLayout>